{{! ==================Github channel ========================= }}
{{! ========================================================== }}
{{! ========================================================== }}
{{#case 'github'}}
---
apiVersion: apps.open-cluster-management.io/v1
kind: Channel
metadata:
  name: {{{../../name}}}-{{{../channelName}}}
  namespace: {{{../../namespace}}}
spec:
  type: GitHub
  pathname: {{{../githubURL}}} ##channels.{{@index}}.githubURL
  secretRef:
    name: github-gitops-clusters
---
apiVersion: v1
kind: Secret
metadata:
  name: github-gitops-clusters
  namespace: gitops-cluster-lifecycle
data:
  user: {{{../githubUser}}}  ##channels.{{@index}}.githubUser
  accessToken: {{{../githubAccessId}}}  ##channels.{{@index}}.githubAccessId      
---
apiVersion: apps.open-cluster-management.io/v1
kind: Subscription
metadata:
  annotations:
    apps.open-cluster-management.io/git-commit: 9f1ceb2a37afd1ee5810b341bdda2ea948e77ed1
    apps.open-cluster-management.io/github-branch: master
    apps.open-cluster-management.io/github-path: placement/nginx
  labels:
    app: nginx-app
  name: placement-nginx-subscription
  namespace: nginx-app-ns
spec:
  channel: gitops-chn-ns/gitops
  placement:
    placementRef:
      kind: PlacementRule
      name: nginx-placement
  
{{/case}}


